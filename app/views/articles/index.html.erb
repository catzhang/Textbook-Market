<h1>Textbook Market</h1>

<%= link_to 'New Item', new_article_path, class: "big button" %>

 <table>
  <tr>
    <th>Item Name</th>
    <th>Price and Description</th>
    <th id="actions">Actions</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: "small button" %>
      <%= link_to 'Edit', edit_article_path(article), class: "small button" %>
      <%= link_to 'Delete', article_path(article), class: "small button",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>